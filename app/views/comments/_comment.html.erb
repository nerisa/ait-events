<% if !comment.id.blank? %>
  <div class="comment-details" id="commentDetails_<%= comment.id %>">
    <div class="text-right">
    <% if can? :update, comment %>
        <%= link_to edit_new_idea_comment_path(idea,comment), remote: true do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
        <%= link_to [idea,comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, remote: true do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
    <% end %>
    </div>
    <p><span class="user-name"><%= comment.user.username %></span> <%= comment.description %></p><p class="comment-time text-right"><%= time_ago_in_words(comment.updated_at) %></p>
  </div>
<% end %>