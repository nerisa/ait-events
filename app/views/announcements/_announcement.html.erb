<% if !announcement.id.blank? %>
  <div class="announcement-details" id="announcementDetail_<%= announcement.id %>">
    <% if can? :update, @event %>
      <div class="event-actions text-right">
        <%= link_to edit_event_announcement_path(@event,announcement), remote: true do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
        <%= link_to [@event,announcement], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, remote: true do  %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
      </div>
    <% end %>
    <p><%= announcement.description %></p>
    <p class="announcement-time text-right"><%= time_ago_in_words(announcement.created_at) %></p>
  </div>
<% end%>