<div class="col-md-12">
<h2>Recently Registered Users</h2>
<strong><span>Total users: <%= @users.count %></span></strong>
<table class="table">
  <thead>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Registered Date</th>
    <th>Last logged in</th>
    <% if can? :ban_users, UsersController %>
      <th>Restrict Access</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <% if can? :ban_users, UsersController %>
          <td><%= link_to "Ban",  users_ban_users_path(:user_id => user.id) %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
</div>